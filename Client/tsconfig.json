{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
  //  "allowSyntheticDefaultExports": true,
    "types": [
      "jest"
    ],
    "lib": [
      "es2017",
      "dom",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "**/test/*.ts",
    "*.d.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
